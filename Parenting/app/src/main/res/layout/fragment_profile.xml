<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">


    <EditText
        android:id="@+id/editTextUserName"

        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="200dp"

        android:inputType="text" />
    <EditText
        android:id="@+id/editTextEmailUpdate"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="250dp"

        android:inputType="text" />

    <EditText
        android:id="@+id/editTextPasswordUpdate"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="300dp"
        android:text="xxxxxxxxxxxxxxxxxxxxxx"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/editTextLocationUpdate"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="350dp"

        android:inputType="text" />

    <EditText
        android:id="@+id/editTextPhoneUpdate"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="400dp"

        android:inputType="text" />

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="450dp"
        android:text="Değişiklikleri Kaydet"
        android:textColor="@android:color/black"
        />







</RelativeLayout>